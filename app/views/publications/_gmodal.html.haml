/ Modal
:javascript

  $(document).ready(function(){
    $("#mymodalg").click(function(){
    $('.ui.modal').modal('show');
    });
  });

.ui.basic.segment
  .ui.small.green.basic.button{id: "mymodalg"} 
    Genres
  .ui.modal
    %i.close.icon
    .header
      Genres
    .image.content
      .ui.medium.image
        %img{:src => ""}
          %h3 Verby
      .description
        .ui.header Current Publications Genres
        - @publications.each do |g|
          -if g.genre.present?
            .ui.image.label{:style => "margin:2px; !important"}
              = link_to g.genre, g
              %i.delete.icon
          -else
            
    .actions
      .ui.basic.black.deny.button
        Nope
      .ui.basic.green.right.labeled.icon.button
        Thats it
        %i.checkmark.icon
  -if signed_in?
    = link_to 'New Publication', new_publication_path ,:class => "ui basic small blue button"