= render 'layouts/header'
.ui.container
  %center
    .ui.form
      %p.error= notice
      %p.error= alert
      .column{:style => "max-width:450px;"} 
        %h2 Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            = f.label :name
            %br/
            = f.text_field :name, autofocus: true
          .field
            = f.label :penname
            %br/
            = f.text_field :penname, autofocus: true, required: true 
          .inline.field
            = f.label :gender
            %br/
            %br/
            = f.check_box :is_female, {}, true , required: true 
            = f.label :is_female, "Female"
            = f.check_box :is_female, {}, false, required: true 
            = f.label :is_female, "Male"
          .field
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true , required: true 
          .field
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off" , required: true 
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off" , required: true 
          .inline.field
            %input{:type => "checkbox" , required: true } 
              "I agree to the terms and conditions"
          .inline.field
            .actions

            = f.submit "Sign up" ,:class => "ui inverted small blue button"
            = render "devise/shared/links"
%br
= render 'layouts/footer'